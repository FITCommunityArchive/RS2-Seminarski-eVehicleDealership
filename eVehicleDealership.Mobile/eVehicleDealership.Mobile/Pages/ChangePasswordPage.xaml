<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="eVehicleDealership.Mobile.Pages.ChangePasswordPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <ContentPage.Content>
        <StackLayout Margin="20" VerticalOptions="CenterAndExpand">
            <Label
                Margin="20"
                FontSize="Large"
                HorizontalOptions="Center"
                Text="PROMJENA LOZINKE"
                TextColor="#707070" />
            <Entry
                x:Name="EntOldPassword"
                IsPassword="True"
                Placeholder="Trenutna lozinka" />
            <Entry
                x:Name="EntNewPassword"
                IsPassword="True"
                Placeholder="Nova lozinka" />
            <Entry
                x:Name="EntConfirmPassword"
                IsPassword="True"
                Placeholder="Potvrda nove lozinke" />
            <Button
                x:Name="BtnChangePassword"
                BackgroundColor="#303F9F"
                Clicked="BtnChangePassword_Clicked"
                Text="Promijeni lozinku"
                TextColor="White" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>